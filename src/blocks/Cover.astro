---
import { Image } from 'astro:assets'

const {
    filename,
    class: classes,
    ...attrs
} = Astro.props
---
<Image
    src={ filename }
    alt={ '' }
    width="1600"
    height="1024"
    quality="100"
    draggable="false"
    class:list={[
        'object-cover min-h-[424px] max-h-[424px] sm:min-h-[480px] sm:max-h-[520px] lg:min-h-[640px] lg:max-h-[640px]',
        classes
    ]}
    loading="eager"
    { ...attrs }
/>