---
import Icon from '../atoms/Icon.astro'
import { _transition } from '../scripts/snips'

const {
    class: classes, ...rest
} = Astro.props

---
<div
    aria-labelledby="modal-title" role="dialog" aria-modal="true"
    class:list={[
        'fixed z-[52] right-0 flex items-center h-dvh opacity-0 translate-x-full',
        _transition(),
        classes
    ]}
    data-modal
    { ...rest }>
    <button class="p-1 md:p-5 absolute top-0 right-0 hidden md:block">
        <Icon name="close-x" class:list="text-white w-8"/>
    </button>
    <div
        class="bg-white w-[344px] sm:w-[520px] h-full max-h-[calc(100vh-80px)] lg:h-[680px] ml-auto md:mr-16">
        MODAL!!!
    </div>
</div>