---
import Icon from '../atoms/Icon.astro'
---
<div
    class:list={[`
        fixed right-0 sm:right-4 bottom-4 z-50
        shadow-xl bg-accent-600
        h-36 w-[96%] sm:w-96
        [clip-path:polygon(0_40%,_100%_0%,_100%_100%,_0%_100%)]
        translate-y-full opacity-0 invisible
    `]} data-toast>
    <div class="px-4 sm:px-5 pb-4 pt-[68px] flex items-center h-full">
        <button
            class="p-4 absolute right-0 top-0 text-white hover:text-white/70"
            data-toast-close>
            <Icon name="close-x" class:list="w-6 pointer-events-none"/>
        </button>
        <p
            set:text="Tada! It's a toast! !!!"
            class="text-white/90"
            data-toast-value
        />
    </div>
</div>