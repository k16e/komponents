---
import Heading from '../atoms/Heading.astro'
import Icon from 'astro-icon'

const { title, showSlat = true, class: classes, ...attrs } = Astro.props
---
<div
    class:list={['flex items-end space-x-2 sm:space-x-3 lg:space-x-6', classes ]} {...attrs}>
    { showSlat && <Icon name="slat-leadingbar" class="w-[40px] h-[8px] md:w-[72px] md:h-[11px] lg:w-[132px] lg:h-[16px]"/> }
	<Heading text={ title } level="h2" size="7xl" weight="extra" tighten color="punch"/>
</div>