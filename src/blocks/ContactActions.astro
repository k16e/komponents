---
import Anchor from '../atoms/Anchor.astro'
import Button from '../atoms/Button.astro'
import _slug from '../scripts/slug'

const { links } = Astro.props
---
<ul class="flex space-x-[12px]">
    {
        links.map((link: any) => (
            <li class="first:hidden md:first:block group first:text-surface-700">
                <Anchor href={ _slug(link.link) } hover="shadow">
                    <Button
                        icon={ link.icon }
                        label={ link.title }
                        iconPosition={ link.icon_position }
                        color={ link.color }
                        responsive
                    />
                </Anchor>
            </li>
        ))
    }
</ul>