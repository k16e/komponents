---
import Pic from '../atoms/Pic.astro'

const {
    images, class: classes, ...attrs
} = Astro.props
---
<div
    class:list={[ classes, 'group flex flex-col sm:flex-row gap-3 overflow-clip' ]}
    { ...attrs }>
    {
        images.map((image: any) => (
            <Pic
                filename={ image.file.filename }
                class="last:hidden lg:last:block sm:max-w-[50%] lg:max-w-[33.33%]"
            />
        ))
    }
</div>