---
const { cols = 2, flipped, class: classes, ...attrs } = Astro.props
---
<div
    class:list={[
        'overflow-clip',
        cols === 2 && 'flex flex-col lg:flex-row gap-y-8 sm:gap-y-12 lg:gap-y-0',
        classes
    ]}
    { ...attrs }>
    <div
        class:list={[
            'px-4 lg:!pr-0',
            cols === 2 && 'w-full lg:w-[640px]',
            flipped && 'order-2'
        ]}>
        <slot name="leading"/>
    </div>
    <div
        class:list={[
            'px-4 lg:!pl-0',
            cols === 2 && 'w-full lg:w-[480px]',
            flipped && 'order-1'
        ]}>
        <slot name="trailing"/>
    </div>
</div>