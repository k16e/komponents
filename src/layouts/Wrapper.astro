---
import {
    _padB, _padY
} from '../js/snips'

const {
    class: classes,
    outer = true,
    centered = true,
    padX = true,
    inner,
    padY = '',
    padB = '',
    ...props
} = Astro.props
---
<div
    { ...props }
    class:list={[
        (outer && !inner) && 'max-w-5xl lg:max-w-[82rem]',
        centered && 'mx-auto',
        padX && 'px-4',
        inner && 'max-w-2xl md:max-w-3xl lg:max-w-screen-lg xl:max-w-[70rem]',
        padY === 'y' && _padY(),
        padB === 'b' && _padB(),
        classes
    ]}>
    <slot/>
</div>