---
import {
    _padB, _padY
} from '../scripts/snips'

const {
    outer = true,
    centered = true,
    padX = true,
    inner,
    padY = '',
    padB = '',
    containXlUp,
    class: classes,
    ...props
} = Astro.props
---
<div
    { ...props }
    class:list={[
        (outer && !inner) && 'max-w-5xl lg:max-w-[82rem]',
        centered && 'mx-auto',
        padX && 'px-4',
        inner && 'max-w-2xl md:max-w-3xl lg:max-w-screen-lg xl:max-w-[70rem]',
        containXlUp && 'w-full max-w-none xl:max-w-[1440px] 2xl:max-w-[1280px]',
        padY === 'y' && _padY(),
        padB === 'b' && _padB(),
        classes
    ]}>
    <slot/>
</div>