---
import '@fontsource-variable/kumbh-sans'
import { SEO } from 'astro-seo'
import _slugify from '@scripts/slugify'
import '@styles/glide.core.min.css'
import '@styles/glide.theme.min.css'
import '@styles/global.css'

const { title, image, description = '' } = Astro.props,
	canonicalURL = new URL(Astro.url.pathname, Astro.site),
	isFormPage =
		Astro.url.pathname == '/repair-center' ||
		Astro.url.pathname == '/contact'
---

<head>
	<meta charset='UTF-8' />
	<meta name='viewport' content='width=device-width' />
	<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
	<meta name='view-transition' content='same-origin' />
	<link type='text/plain' rel='author' href='/humans.txt' />
	<link
		rel='apple-touch-icon'
		sizes='180x180'
		href='/favicons/apple-touch-icon.png'
	/>
	<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
	<link
		rel='icon'
		type='image/png'
		sizes='32x32'
		href='/favicons/favicon-32x32.png'
	/>
	<link
		rel='icon'
		type='image/png'
		sizes='16x16'
		href='/favicons/favicon-16x16.png'
	/>
	<meta
		name='msapplication-TileImage'
		content='/favicons/mstile-144x144.png'
	/>
	<link rel='icon' type='image/x-icon' href='/favicon.ico' />
	<link rel='mask-icon' href='/safari-pinned-tab.svg' color='#de3d31' />
	<meta name='msapplication-TileColor' content='#de3d31' />
	<meta name='theme-color' content='#ffffff' />
	<meta name='msapplication-config' content='/browserconfig.xml' />
	<SEO
		title={title}
		titleDefault='Komponents & Solutions Rack Ltd.'
		description={description}
		openGraph={{
			basic: {
				title: title,
				type: 'website',
				image: image,
			},
		}}
		,
		canonical={canonicalURL}
	/>

	<link rel='manifest' href='/site.webmanifest' />
	{
		isFormPage && (
			<script
				is:inline
				src='https://unpkg.com/@botpoison/browser'
				async
			/>
		)
	}
</head>
