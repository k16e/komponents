---
export const prerender = false

import { useStoryblokApi } from '@storyblok/astro'
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro'
import Base from '@layouts/Base.astro'
import { _getPageData } from '@scripts/storyblok'
import ProductsFiltered from '@composites/ProductsFiltered.astro'

const slug = Astro.url.pathname.slice(1)
const { page, content, meta } = await _getPageData(slug)
---

<Base
	pageTitle={meta.title}
	pageDescription={meta.description}
	pageThumbnail={meta.image.filename}>
	<StoryblokComponent blok={content} />
	<ProductsFiltered server:defer>
		<div class='relative'>
			<div slot='fallback' class='absolute top-0 left-1/2 '>
				<svg
					class='animate-spin -ml-1 mr-3 h-5 w-5 text-white'
					xmlns='http://www.w3.org/2000/svg'
					fill='none'
					viewBox='0 0 24 24'>
					<circle
						class='opacity-25'
						cx='12'
						cy='12'
						r='10'
						stroke='currentColor'
						stroke-width='4'></circle>
					<path
						class='opacity-75'
						fill='currentColor'
						d='M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z'
					></path>
				</svg>
			</div>
		</div>
	</ProductsFiltered>
</Base>
