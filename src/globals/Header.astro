---
import Wrapper from '../layouts/Wrapper.astro'
import { Icon } from 'astro-icon'

const { title, class: classes, ...attrs } = Astro.props
---
<header
    class:list={[ classes, 'z-50 fixed top-0 inset-x-0 h-20 lg:h-20 bg-white' ]}
    data-main-header
    { ...attrs }>
    <Wrapper class:list="flex items-center h-full">
        <a href="/" class="flex">
            <Icon name="icon" class="w-9 lg:hidden"/>
            <Icon name="logo" class="h-10 hidden lg:block"/>
            <span class='sr-only'>Komponents</span>
        </a>
    </Wrapper>
</header>