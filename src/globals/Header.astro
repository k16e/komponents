---
import Wrapper from '../layouts/Wrapper.astro'
import { _mobile } from '../js/snips'
import { Icon } from 'astro-icon'

const { title, class: classes, ...attrs } = Astro.props
---
<header
    class:list={[ classes, 'z-50 fixed top-0 inset-x-0 h-24 bg-white' ]}
    data-main-header
    { ...attrs }>
    <Wrapper class:list="flex items-center h-full">
        <a href="/" class="flex">
            { _mobile() ? <Icon name="icon" class="w-7"/> : <Icon name="logo" class="h-10"/> }
        </a>
    </Wrapper>
</header>