---
import Wrapper from '../layouts/Wrapper.astro'
import { Icon } from 'astro-icon'
import ContactActions from '../components/ContactActions.astro'

const {
    title, contactActions, class: classes, ...attrs
} = Astro.props
---
<header
    class:list={[ classes, 'z-50 fixed top-0 inset-x-0' ]}
    data-main-header
    { ...attrs }>
    <Wrapper class:list="flex items-center justify-between h-full">
        <a href="/" class="flex">
            <Icon name="icon" class="w-9 lg:hidden"/>
            <Icon name="logo" class="h-10 hidden lg:block"/>
            <span class='sr-only'>Komponents</span>
        </a>
        <div class="flex space-x-[12px]">
            <ContactActions links={ contactActions }/>
        </div>
    </Wrapper>
</header>