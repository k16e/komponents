---
import { Image } from 'astro:assets'

const { filename, alt, class: classes, ...attrs } = Astro.props
---
<Image
    src={ filename }
    alt={ alt || '' }
    width="1280"
    height="1280"
    class:list={[ 'object-cover aspect-[3/4] max-h-[520px] sm:max-h-[640px] clip-path-xs', classes ]}
    quality="100"
    { ...attrs }
/>