---
import { Image } from 'astro:assets'

const { filename, alt, class: classes, ...attrs } = Astro.props
---
<Image
    src={ filename }
    alt={ alt || '' }
    width="1280"
    height="1280"
    class:list={[ 'object-cover aspect-square', classes ]}
    quality="100"
    { ...attrs }
/>

<style>
    img {
        clip-path: polygon(0 12%, 100% 0%, 100% 88%, 0% 100%);
    }
</style>