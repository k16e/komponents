---
import { Image } from 'astro:assets'

const {
    filename,
    class: classes,
    ...attrs
} = Astro.props
---
<Image
    src={ filename }
    alt={ '' }
    width="1440"
    height="1440"
    quality="100"
    draggable="false"
    class:list={[
        'object-cover aspect-[3/4] h-[520px] sm:h-[640px] md:h-[720px]',
        classes
    ]}
    { ...attrs }
/>