---
import { Image } from 'astro:assets'

const {
    filename,
    clip,
    defaultHeight = true,
    growHeight,
    class: classes,
    ...attrs
} = Astro.props
---
<Image
    src={ filename }
    alt={ '' }
    width="1600"
    height="1600"
    quality="100"
    draggable="false"
    class:list={[
        'object-cover aspect-[3/4]',
        defaultHeight && 'h-[520px] sm:h-[572px]',
        growHeight && 'h-[520px] sm:h-[640px] md:h-[720px]',
        clip === 'y' && 'clip-path-y',
        classes
    ]}
    { ...attrs }
/>