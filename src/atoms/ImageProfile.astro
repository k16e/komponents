---
import { Image } from 'astro:assets'

const {
    filename, small = true, medium, large,
    class: classes,
    ...attrs
} = Astro.props
---
<Image
    src={ filename }
    alt={ '' }
    width="1008"
    height="1312"
    quality="100"
    draggable="false"
    class:list={[
        'object-cover object-top',
        classes
    ]}
    { ...attrs }
/>