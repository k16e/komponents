---
import { Icon } from 'astro-icon'

const { icon, label } = Astro.props
---
<div class="h-12 pl-4 pr-5 bg-punch-500 justify-center items-center gap-3 inline-flex text-white">
    <Icon name={ icon } class="w-[22px]"/>
    <div class="justify-start items-start gap-2 flex">
        <p class="text-sm font-bold font-display uppercase tracking-widest">
            { label }
        </p>
    </div>
</div>