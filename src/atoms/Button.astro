---
import { Icon } from 'astro-icon'
import LinkText from './LinkText.astro'

const { icon, iconPosition, label, color } = Astro.props
---
<div
    class:list={[
        'h-12 px-4 justify-center items-center gap-3 inline-flex hover:shadow-xl transition duration-200',
        color === 'punch' && 'bg-punch-500 text-white',
        color === 'surface' && 'bg-surface-200 text-surface-800',
        color === 'transparent' && 'bg-transparent text-surface-700',
    ]}>
    { icon && (
        <Icon
            name={ icon }
            class:list={['w-[22px]', iconPosition === 'leading' ? 'order-1' : 'order-2']}
        />
    )}
    <div
        class:list={['justify-start items-start gap-2 flex', iconPosition === 'leading' ? 'order-2' : 'order-1']}>
        <LinkText text={ label }/>
    </div>
</div>