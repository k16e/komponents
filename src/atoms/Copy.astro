---
const
    {
        content,
        color = 'surface',
        growText = true,
        Tag = 'div',
        class: classes,
        ...attrs
    } = Astro.props
---
<Tag
    class:list={[
        growText ? 'text-base sm:text-md font-sans' : 'text-base',
        color === 'surface' && 'text-surface-800',
        color === 'white' && 'text-white/80',
        classes
    ]} { ...attrs }>
    <Fragment set:html={ content }/>
</Tag>