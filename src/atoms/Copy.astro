---
const
    {
        content,
        color = 'surface',
        growText = true,
        size,
        tag,
        class: classes,
        ...attrs
    } = Astro.props
const Tag = tag || 'div'
---
<Tag
    class:list={[
        growText && !size ? 'text-base sm:text-md font-sans' : 'text-base',
        size === 'sm' && 'text-sm',
        color === 'surface' && 'text-surface-800',
        color === 'white' && 'text-white/80',
        classes
    ]} { ...attrs }>
    <Fragment set:html={ content }/>
</Tag>