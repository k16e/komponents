---
import _slugify from '../scripts/slugify'
import { _capitalize } from '../scripts/snips'
import { _affiliate, _affiliates } from '../scripts/store'

const
    {
        label, id, autocomplete, required,
        class: classes, ...attrs
    } = Astro.props
---
<div
    class:list={[ 'group', classes ]}
    data-label={ _slugify(label) }
    { ...attrs }>
    <label
        for={ id }
        class="flex">
        <span
            class="block mr-0.5 group-[:focus-within]:font-medium group-[:focus-within]:text-dark-950"
            set:text={ label }
        />
        { required && (<span class="text-red-600">*</span>) }
    </label>
    <div class="mt-1">
        <textarea
            rows="4"
            name={ _capitalize(label) }
            id={ id }
            required={ required }
            class:list={[`
                block w-full border-0 py-3 resize-y
                bg-surface-100 focus:bg-white text-surface-800
                ring-[1.5px] ring-inset ring-surface-200
                placeholder:text-surface-600
                focus:ring-2 focus:ring-inset focus:ring-accent-600
            `]}></textarea>
    </div>
</div>