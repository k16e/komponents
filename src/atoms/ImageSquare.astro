---
import { Image } from 'astro:assets'

const {
	filename,
	square = true,
	lelo,
	slat,
	class: classes,
	...attrs
} = Astro.props
---

<Image
	src={filename}
	alt={''}
	widths={[480, 768, 960, 1280, 1440]}
	sizes={`(max-width: 475px) 480px,
        (max-width: 640px) 768px,
        (max-width: 768px) 960px,
        (max-width: 1024px) 1280px,
        (max-width: 1280px) 1440px`}
	inferSize={true}
	quality='100'
	draggable='false'
	class:list={[
		'object-cover',
		square && 'aspect-square',
		(lelo || slat) && 'aspect-[3/4] h-[520px] sm:h-[640px]',
		lelo && 'md:h-[720px]',
		slat && 'clip-path-xs',
		classes,
	]}
	{...attrs}
/>
