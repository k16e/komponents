---
import { Image } from 'astro:assets'

const {
	filename,
	square = true,
    loading = 'eager',
	lelo,
	slat,
	cover,
	class: classes,
	...attrs
} = Astro.props
---

<Image
	src={filename}
	alt={''}
	widths={[480, 768, 960, 1280, 1600]}
	sizes={`(max-width: 475px) 480px,
        (max-width: 640px) 768px,
        (max-width: 768px) 960px,
        (max-width: 1024px) 1280px,
        (max-width: 1280px) 1600px`}
	inferSize={true}
	quality='100'
	draggable='false'
	loading={loading}
	class:list={[
		'object-cover',
		square && 'aspect-square',
		(lelo || slat) && 'aspect-[3/4] h-[520px] sm:h-[640px]',
		lelo && 'md:h-[720px]',
		slat && 'clip-path-xs',
		cover &&
			'min-h-[424px] max-h-[424px] sm:min-h-[480px] sm:max-h-[520px] lg:min-h-[640px] lg:max-h-[640px]',
		classes,
	]}
	{...attrs}
/>
