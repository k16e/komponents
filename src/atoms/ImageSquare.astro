---
import { Image } from 'astro:assets'

const {
	filename,
	square = true,
	loading = 'eager',
	lelo,
	slat,
	cover,
	clip,
	asArray,
	class: classes,
	...attrs
} = Astro.props
---

<Image
	src={filename}
	alt={''}
	widths={[576, 768, 960, 1280, 1600]}
	sizes={`(max-width: 475px) 576px,
        (max-width: 640px) 768px,
        (max-width: 768px) 960px,
        (max-width: 1024px) 1280px,
        (max-width: 1280px) 1600px`}
	quality={'high'}
	inferSize
	draggable='false'
	loading={loading}
	class:list={[
		'object-cover',
		square && 'aspect-square',
		(lelo || slat) && 'aspect-[3/4] h-[32.5rem] sm:h-[40rem]',
		lelo && 'md:h-[45rem]',
		slat && 'clip-path-xs',
		cover &&
			'aspect-video min-h-[23.5rem] max-h-[23.5rem] sm:min-h-[30rem] sm:max-h-[32.5rem] lg:min-h-[41rem] lg:max-h-[41rem]',
		clip === 'y' && 'clip-path-y',
		asArray && 'h-[32.5rem] sm:h-[40rem] md:h-[45rem] max-h-[45rem]',
		classes,
	]}
	{...attrs}
/>