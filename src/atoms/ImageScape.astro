---
import { Image } from 'astro:assets'

const {
    filename, small = true, medium, large,
    class: classes,
    ...attrs
} = Astro.props
---
<Image
    src={ filename }
    alt={ '' }
    width="1440"
    height="1024"
    quality="100"
    draggable="false"
    class:list={[
        'object-cover',
        classes
    ]}
    { ...attrs }
/>