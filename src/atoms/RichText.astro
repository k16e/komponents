---
import { renderRichText } from '@storyblok/astro'

const
    {
        text,
        growText = true,
        color = 'surface',
        Tag = 'div'
    } = Astro.props
---
<Tag
    class:list={[
        'prose !max-w-none',
        growText ? 'text-base sm:text-md font-sans' : 'text-base',
        color === 'surface' && 'text-surface-800',
        color === 'white' && 'text-white/80',
    ]}>
    <Fragment set:html={ renderRichText(text) }/>
</Tag>