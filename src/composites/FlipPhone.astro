---
import Wrapper from '../layouts/Wrapper.astro'
import Grid from '../layouts/Grid.astro'
import SectionTitle from '../blocks/SectionTitle.astro'
import Heading from '../atoms/Heading.astro'
import BannerEntry from '../blocks/BannerEntry.astro'
import { _gradientSurface } from '../js/snips'

const {
    blok
} = Astro.props
---
<section class:list={[ ..._gradientSurface() ]}>
    <Wrapper inner padY="y" padX={ false }>
        <Grid flipped>
            <div slot="trailing" class="space-y-10">
                <SectionTitle
                    title={ blok.title }
                    class:list="opacity-60"
                />
                <div class="hidden lg:flex flex-col space-y-16">
                    { blok.banners.map(entry => (
                        <button>
                            <Heading text={ entry.subtitle } size="4xl" weight="extra" color="surface" tighten/>
                        </button>
                    )) }
                </div>
            </div>
            <div
                slot="leading"
                class="lg:bg-white lg:shadow-lg lg:p-12 lg:h-[640px] overflow-clip flex flex-col justify-between">
                <div class="space-y-14 sm:space-y-16 relative">
                    { blok.banners.map(entry => (
                        <div class="lg:absolute top-0 left-0 [&:nth-child(2)]:lg:hidden last:lg:hidden">
                            <BannerEntry
                                subtitle={ entry.subtitle }
                                title={ entry.title }
                                copy={ entry.copy }
                            />
                        </div>
                    )) }
                </div>
                <div aria-hidden="true" class="hidden lg:block">
                    <div>
                        A
                    </div>
                </div>
            </div>
        </Grid>
    </Wrapper>
</section>