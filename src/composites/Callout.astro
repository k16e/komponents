---
import Wrapper from '../layouts/Wrapper.astro'
import Readable from '../layouts/Readable.astro'
import BannerEntry from '../blocks/BannerEntry.astro'
import { _gradientLight, _padY } from '../scripts/snips'
import Icon from '../atoms/Icon.astro'

const {
    blok
} = Astro.props
---
<section
    class:list={[ 'relative overflow-clip h-[640px] md:h-[728px] box-content', ..._padY() ]}>
    <div aria-hidden class="z-[3]">
        <Icon
            name="symbol"
            aria-hidden
            aria-label="Decoration leading"
            class="text-accent-400 opacity-20 h-full"
        />
    </div>
    <div aria-hidden class="hidden xl:block z-[3]">
        <Icon
            name="symbol"
            aria-hidden
            aria-label="Decoration trailing"
            class="text-accent-400 opacity-20 h-full"
        />
    </div>
    <div aria-hidden>
        <Wrapper inner class:list="h-full clip-path-xs lg:clip-path-sm bg-accent-600 lg:px-4"/>
    </div>
    <div class="z-10">
        <Readable class:list="h-full flex flex-col items-center justify-center">
            <BannerEntry
                subtitle={ blok.callout[0].subtitle }
                title={ blok.callout[0].title }
                copy={ blok.callout[0].copy }
                color="white"
                slatColor="white"
                hLevel={ 4 }
                centered
                links={ blok.callout[0].links }
            />
        </Readable>
    </div>
</section>

<style>
    section {
        @apply grid grid-cols-12 grid-rows-12;
        & > div:nth-child(1) {
            grid-area: 2 / 1 / 12 / 2;
            translate: none;
            @media screen(sm) {
                @apply -translate-x-full;
                grid-area: 3 / 1 / 12 / 2;
            }
        }
        & > div:nth-child(2) { grid-area: 1 / 9 / 11 / 13; }
        & > div:nth-child(3) {
            grid-area: 1 / 1 / 13 / 13;
            @media screen(xl) {
                grid-column-start: 2;
                grid-column-end: 12;
            }
        }
        & > div:nth-child(4) {
            grid-area: 1 / 1 / 13 / 13;
        }
    }
</style>