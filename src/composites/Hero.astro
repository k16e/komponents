---
import Wrapper from '../layouts/Wrapper.astro'
import BannerTitle from '../blocks/BannerTitle.astro'
import BannerSubtitle from '../blocks/BannerSubtitle.astro'
import Grid from '../layouts/Grid.astro'
import Copy from '../atoms/Copy.astro'
import Anchor from '../atoms/Anchor.astro'
import Button from '../atoms/Button.astro'
import ImageSlat from '../blocks/ImageSlat.astro'
import { _padB, _gradientLight } from '../scripts/snips'

const { blok } = Astro.props
---
<section class:list={[ _gradientLight() ]}>
    <Wrapper inner padY="y" padX={ false }>
        <Grid>
            <div slot="leading" class="space-y-4 md:space-y-6 lg:space-y-10">
                <BannerTitle
                    title={ blok.title }
                    class:list="text-punch-600"
                />
                <BannerSubtitle title={ blok.subtitle }/>
            </div>
            <div slot="trailing" class="space-y-8 md:space-y-10 lg:space-y-14">
                <Copy content={ blok.copy }/>
                <ul class="flex flex-col sm:flex-row space-y-3 sm:space-y-0 sm:space-x-3">
                    { blok.links.map((link: any) => (
                        <li class="group">
                            <Anchor
                                href={ `/${link.link.story.full_slug === 'home' ? '' : link.link.story.full_slug}` }
                                hover="shadow">
                                <Button
                                    icon={ link.icon }
                                    label={ link.title }
                                    iconPosition={ link.icon_position }
                                    color={ link.color }
                                    class="w-full"
                                />
                            </Anchor>
                        </li>
                    ))}
                </ul>
            </div>
        </Grid>
    </Wrapper>
    <ImageSlat images={ blok.images } class:list={['sm:mt-12', _padB()]}/>
</section>
