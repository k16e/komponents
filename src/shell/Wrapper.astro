---
const {
    class: classes,
    outer = true,
    centered = true,
    padX = true,
    inner,
    padY = '',
    ...props
} = Astro.props
---
<div
    { ...props }
    class:list={[
        (outer && !inner) && 'max-w-5xl lg:max-w-screen-xl',
        centered && 'mx-auto',
        padX && 'px-3',
        inner && 'max-w-2xl md:max-w-3xl lg:max-w-screen-lg xl:max-w-[70rem]',
        padY === 'y' && 'py-12 lg:py-24',
        classes
    ]}>
    <slot/>
</div>