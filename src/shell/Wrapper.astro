---
const {
    class: classes,
    outer = true,
    centered = true,
    pad = true,
    inner,
    ...props
} = Astro.props
---
<div
    { ...props }
    class:list={[
        (outer && !inner) && 'max-w-5xl lg:max-w-screen-xl',
        centered && 'mx-auto',
        pad && 'px-3',
        inner && 'max-w-4xl lg:max-w-[70rem]',
        classes
    ]}>
    <slot/>
</div>